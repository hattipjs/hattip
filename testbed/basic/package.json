{
  "name": "@hattip/testbed-basic",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon entry-node.js",
    "start": "node --no-experimental-fetch entry-node.js",
    "start:native-fetch": "node --experimental-fetch entry-node-native-fetch.js",
    "build:cfw": "hattip-cloudflare-workers -e entry-cfw.js dist/cloudflare-workers-bundle/index.js",
    "start:cfw": "wrangler dev --local --port 3000",
    "build:netlify-functions": "rimraf .netlify/edge-functions-dist && hattip-netlify -c --staticDir public --func entry-netlify-function.js",
    "build:netlify-edge": "hattip-netlify -c --staticDir public --edge entry-netlify-edge.js",
    "start:netlify": "cross-env BROWSER=none netlify serve -op 3000",
    "build:vercel": "hattip-vercel -c --staticDir public --serverless entry-vercel-serverless.js",
    "build:vercel-edge": "hattip-vercel -c --staticDir public --edge entry-vercel-edge.js",
    "build:deno": "hattip-deno entry-deno.js dist/deno/index.js --staticDir public --nodeCompat",
    "build:deno-std": "hattip-deno entry-deno-std.js dist/deno/index.js --staticDir public --nodeCompat",
    "build:deno-node": "hattip-deno entry-node.js dist/deno/index.js --staticDir public --nodeCompat",
    "start:deno": "deno run --allow-read --allow-net --allow-env dist/deno/index.js",
    "start:fastly": "cd fastly && fastly compute serve --addr=\"127.0.0.1:3000\"",
    "ci": "vitest --reporter=verbose --no-threads"
  },
  "main": "entry-gcf.js",
  "devDependencies": {
    "@fastly/compute-js-static-publish": "^5.1.1",
    "@fastly/js-compute": "^3.3.1",
    "@hattip/adapter-bun": "workspace:*",
    "@hattip/adapter-cloudflare-workers": "workspace:*",
    "@hattip/adapter-deno": "workspace:*",
    "@hattip/adapter-fastly": "workspace:*",
    "@hattip/adapter-lagon": "workspace:*",
    "@hattip/adapter-netlify-edge": "workspace:*",
    "@hattip/adapter-netlify-functions": "workspace:*",
    "@hattip/adapter-test": "workspace:*",
    "@hattip/adapter-uwebsockets": "workspace:*",
    "@hattip/adapter-vercel-edge": "workspace:*",
    "@hattip/bundler-cloudflare-workers": "workspace:*",
    "@hattip/bundler-deno": "workspace:*",
    "@hattip/bundler-netlify": "workspace:*",
    "@hattip/bundler-vercel": "workspace:*",
    "@lagon/cli": "^0.7.8",
    "@types/connect": "^3.4.35",
    "@types/cookie": "^0.5.1",
    "@types/node": "^20.5.7",
    "@types/ps-tree": "^1.1.2",
    "@vercel/ncc": "^0.36.1",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.2",
    "netlify-cli": "^16.1.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.1",
    "ps-tree": "^1.2.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3",
    "wrangler": "^3.6.0"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@graphql-tools/schema": "^10.0.0",
    "@hattip/adapter-node": "workspace:*",
    "@hattip/compose": "workspace:*",
    "@hattip/cookie": "workspace:*",
    "@hattip/graphql": "workspace:*",
    "@hattip/polyfills": "workspace:*",
    "@hattip/response": "workspace:*",
    "@hattip/router": "workspace:*",
    "@hattip/session": "workspace:*",
    "@hattip/static": "workspace:*",
    "@hattip/walk": "workspace:*",
    "connect": "^3.7.0",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "sirv": "^2.0.3"
  }
}
