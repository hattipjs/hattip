{
  "name": "hattip-workspace-root",
  "private": "true",
  "scripts": {
    "dev": "pnpm -r --filter ./packages/** --parallel dev",
    "build": "pnpm -r --filter ./packages/** build",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "test": "pnpm test:prettier && cross-env CI=true pnpm -r --stream run test",
    "test:prettier": "prettier --check --ignore-path .gitignore --ignore-unknown . '!pnpm-lock.yaml'"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "vitest": "^0.12.6"
  }
}
