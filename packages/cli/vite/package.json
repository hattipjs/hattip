{
  "name": "@hattip/vite",
  "version": "0.0.48",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:package",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0",
    "test:package": "publint --strict"
  },
  "description": "Vite plugin and CLI wrapper for Hattip",
  "bin": {
    "hattip": "./hattip.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./node-loader": "./node-loader.mjs",
    "./suppress-loader-warnings": "./suppress-loader-warnings.cjs"
  },
  "typesVersions": {
    "*": {
      "vite-dev-server": [
        "./vite-dev-server.d.ts"
      ],
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "hattip.js",
    "vite-dev-server.d.ts",
    "node-loader.mjs",
    "suppress-loader-warnings.cjs"
  ],
  "peerDependencies": {
    "vite": "^4 || ^5"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^4.0.1",
    "eslint": "^8.57.0",
    "publint": "^0.2.10",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vite": "^5.4.5"
  },
  "dependencies": {
    "@hattip/adapter-node": "workspace:*",
    "@vavite/connect": "^5.0.0",
    "@vavite/multibuild": "^5.0.0",
    "@vavite/node-loader": "^5.0.0",
    "cac": "^6.7.14",
    "import-meta-resolve": "^4.1.0",
    "picocolors": "^1.1.0",
    "resolve.exports": "^2.0.2"
  }
}
