{
  "name": "@hattip/bundler-cloudflare-workers",
  "version": "0.0.3",
  "description": "Cloudflare Workers bundler for Hattip",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "hattip-cloudflare-workers": "./cli.mjs"
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "https://github.com/cyco130/vavite",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:package",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
    "test:package": "publint"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^1.1.0",
    "@types/node": "^17.0.33",
    "eslint": "^8.15.0",
    "publint": "^0.1.1",
    "tsup": "^5.12.7",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "esbuild": "^0.14.39",
    "cac": "^6.7.12"
  }
}
