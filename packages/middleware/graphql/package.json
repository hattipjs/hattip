{
  "name": "@hattip/graphql",
  "version": "0.0.49",
  "type": "module",
  "description": "GraphQL middleware for Hattip",
  "files": [
    "dist",
    "fetch.shim.js",
    "graphql-yoga.license.txt"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./yoga": "./dist/yoga.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "github:hattipjs/hattip",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:package",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0",
    "test:package": "publint --strict"
  },
  "peerDependencies": {
    "graphql": "^16.9.0"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.13",
