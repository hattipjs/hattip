    "@hattip/compose": "workspace:*",
    "@hattip/core": "workspace:*",
    "dset": "^3.1.4",
    "graphql-yoga": "^5.10.6",
    "tslib": "^2.8.1",
    "urlpattern-polyfill": "^10.0.0"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^5.0.1",
    "@graphql-yoga/subscription": "^5.0.2",
    "@hattip/polyfills": "workspace:*",
    "@types/node": "^18.19.68",
    "eslint": "^9.17.0",
    "graphql": "^16.10.0",
    "publint": "^0.2.12",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
