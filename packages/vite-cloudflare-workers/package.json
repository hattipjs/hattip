{
  "name": "@hattip/vite-cloudflare-workers",
  "version": "0.0.1",
  "description": "Cloudflare Workers Vite plugin for Hattip",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./default-entry": {
      "import": "./dist/default-entry.mjs"
    },
    "./static-assets-entry": {
      "import": "./dist/static-assets-entry.mjs"
    }
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "https://github.com/cyco130/vavite",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:ts": "eslint . --max-warnings 0 --ignore-pattern dist"
  },
  "peerDependencies": {
    "vite": "^2.8.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@cyco130/eslint-config": "^1.0.0",
    "@hattip/adapter-cloudflare-workers": "workspace:*",
    "@hattip/core": "workspace:*",
    "@types/node": "^17.0.21",
    "@vavite/multibuild": "^1.1.3",
    "eslint": "^8.10.0",
    "tsup": "^5.12.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  },
  "dependencies": {
    "@hattip/bundler-cloudflare-workers": "workspace:*"
  }
}
