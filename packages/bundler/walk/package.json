{
  "name": "@hattip/walk",
  "version": "0.0.49",
  "type": "module",
  "description": "Create a file manifest from a directory",
  "files": [
    "dist",
    "cli.js"
  ],
  "bin": {
    "hattip-walk": "cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "github:hattipjs/hattip",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:package",
    "test:unit": "vitest run --reporter=verbose",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0",
    "test:package": "publint --strict"
  },
  "dependencies": {
    "@hattip/headers": "workspace:*",
    "cac": "^6.7.14",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^5.0.1",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^18.19.68",
    "eslint": "^9.17.0",
    "publint": "^0.2.12",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
