{
  "name": "@hattip/walk",
  "version": "0.0.38",
  "type": "module",
  "description": "Create a file manifest from a directory",
  "files": [
    "dist",
    "cli.js"
  ],
  "bin": {
    "hattip-walk": "cli.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "https://github.com/hattipjs/hattip",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:package",
    "test:unit": "vitest run --reporter=verbose",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
    "test:package": "publint --strict"
  },
  "dependencies": {
    "@hattip/headers": "workspace:*",
    "cac": "^6.7.14",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^3.6.0",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.7",
    "eslint": "^8.56.0",
    "publint": "^0.2.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  }
}
