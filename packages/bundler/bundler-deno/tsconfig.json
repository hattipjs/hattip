{
	"compilerOptions": {
		"noEmit": true,
		"target": "es2020",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"checkJs": true
	},
	"exclude": ["node_modules", "dist", "cli.js"]
}
