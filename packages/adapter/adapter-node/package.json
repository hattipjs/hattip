{
  "name": "@hattip/adapter-node",
  "version": "0.0.48",
  "type": "module",
  "description": "Node.js adapter for Hattip",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./native-fetch": "./dist/native-fetch.js",
    "./whatwg-node": "./dist/whatwg-node.js",
    "./request": "./dist/request.js",
    "./response": "./dist/response.js",
    "./fast-fetch": "./dist/fast-fetch.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "author": "Fatih Ayg√ºn <cyco130@gmail.com>",
  "repository": "github:hattipjs/hattip",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:package",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0",
    "test:package": "publint --strict"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^5.0.0",
    "@types/node": "^18.19.50",
    "eslint": "^9.14.0",
    "publint": "^0.2.12",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@hattip/core": "workspace:*",
    "@hattip/polyfills": "workspace:*",
    "@hattip/walk": "workspace:*"
  }
}
