{
  "name": "@hattip/adapter-test",
  "version": "0.0.32",
  "type": "module",
  "description": "Testing utility for HatTip",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm build",
    "test": "pnpm test:typecheck && pnpm test:lint && pnpm test:unit && pnpm test:package",
    "test:unit": "vitest run --reporter=verbose",
    "test:typecheck": "tsc -p tsconfig.json --noEmit",
    "test:lint": "eslint . --max-warnings 0 --ignore-pattern dist",
    "test:package": "publint"
  },
  "dependencies": {
    "@hattip/core": "workspace:*",
    "@hattip/polyfills": "workspace:*"
  },
  "devDependencies": {
    "@cyco130/eslint-config": "^3.0.2",
    "eslint": "^8.36.0",
    "publint": "^0.1.11",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.7"
  },
  "author": "Tessei Kameyama <tkamenoko@vivaldi.net>",
  "repository": "https://github.com/hattipjs/hattip",
  "license": "MIT"
}
